<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/number_add_sub"
    android:padding="2dp"
    android:layout_gravity="center">
    <Button
        android:id="@+id/subView_btn"
        android:layout_width="@dimen/add_sub_size"
        android:layout_height="@dimen/add_sub_size"
        android:text="-"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:background="@drawable/bg_btn_add_sub"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/waresNum_tv"
        android:layout_width="@dimen/double_add_sub_size"
        android:layout_height="@dimen/add_sub_size"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:padding="1dp"
        android:text="1"
        android:gravity="center"/>
    <Button
        android:id="@+id/addView_btn"
        android:layout_width="@dimen/add_sub_size"
        android:layout_height="@dimen/add_sub_size"
        android:text="+"
        android:textColor="@color/black"
        android:background="@drawable/bg_btn_add_sub"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="18sp"/>
</LinearLayout>